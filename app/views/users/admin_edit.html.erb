<h1>Admin: Edit user with id= <%= @user.id %></h1>

<div class="col-md-6 col-md-offset-3 user_new">
  <%= form_for(@user, url: admin_update_user_path(@user)) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>

    <label for="user_business">Name of Practice</label>
    <%= f.text_field :business, class: 'form-control' %>

    <%= f.label :street_address %>
    <%= f.text_field :street_address, class: 'form-control' %>

    <%= f.label :city %>
    <%= f.text_field :city, class: 'form-control small_fields' %>

    <%= f.label :state %>
    <%= f.text_field :state, class: 'form-control small_fields' %>

    <%= f.label :zip %>
    <%= f.text_field :zip, class: 'form-control small_fields' %>

      <%= f.submit 'Update User Information', class: "btn-lg btn-primary center" %>
  <% end %>
</div>

<%= button_to "Back to All Users Index", users_path, method: :get, class: 'btn-lg btn-primary center home_button' %>
